<h1><%= @article.title %></h1>
<%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_article_path(@article) %>
<%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, article_path(@article),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
<p><%= @article.content %></p>
